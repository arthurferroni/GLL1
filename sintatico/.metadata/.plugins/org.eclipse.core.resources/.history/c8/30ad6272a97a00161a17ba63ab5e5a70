package br.uefs.model;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Arrays;
import java.util.HashMap;
import java.util.Stack;
public class Analiser {
	
	private HashMap<String, Integer> prd_id = new HashMap<String,Integer>();
	private Stack<Integer> pilha;
	private int [][]tb_predicao = new int[63][43];
	
	public void criandotb_predicao() throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader("tb.txt"));
		String []auxLinha;
		int i = 0;
		auxLinha = br.readLine().split(";");
		while(auxLinha !=null)
		{
			Arrays.fill(tb_predicao[i], -1);
			for(int x = 1; x < auxLinha.length; x++)
				tb_predicao[i][x-1] = get_nt_id(auxLinha[x]);
			
			auxLinha = br.readLine().split(";");
			i++;
		}
		br.close();
	}
	private void enderecar_producoes()
	{
		BufferedReader br = new BufferedReader(new FileReader("producoes.in"));
		String prod = br.readLine().trim();
		while(prod!=null)
		{
			System.err.println(prod);
			String prod = br.readLine().trim();
		}
		
	}
	


	public void analisadorPreditivo(){
		// para fazer
	}
	
	public void producoes(int naoterminal){
		switch(naoterminal){
			case Library.nt_programa:
				pilha.pop();
				pilha.push(Library.nt_inicio_const_var_func);
				break;
		
		}
	}
	

}
