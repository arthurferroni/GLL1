package br.uefs.model;

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.Arrays;
import java.util.HashMap;
import java.util.Stack;
public class Analiser {
	
	private HashMap<String, Integer> prd_id = new HashMap<String,Integer>();
	private Stack<Integer> pilha;
	private int [][]tb_predicao = new int[63][43];
	
	public void criandotb_predicao() throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader("tb.txt"));
		String linha;
		int i = 0;
		linha = br.readLine();
		while(linha !=null)
		{
			String []tk_tb =  linha.split(";");
			Arrays.fill(tb_predicao[i], -1); // 
			for(int x = 1; x < tk_tb.length; x++)
				tb_predicao[i][x-1] = get_nt_id(tk_tb[x]);
			
			linha = br.readLine();
			i++;
		}
		br.close();
	}
	
	private int get_nt_id(String nt_prod) {
		if(prd_id.containsKey(nt_prod))
			return prd_id.get(nt_prod);
		else
			return -1;
	}
	
	private void enderacar_nt() throws IOException
	{
		BufferedReader br = new BufferedReader(new FileReader("producoes.in"));
		String prod = br.readLine();
		int i = 44; 
		while(prod!=null)
		{
			prod = prod.trim();
			prd_id.put(prod,i);
			//System.err.println(prod);
			prod = br.readLine();
			i++;
		}
	}
	


	public void analisadorPreditivo(){
		// para fazer
	}
	
	public void producoes(int naoterminal){
		switch(naoterminal){
			case Library.nt_programa:
				pilha.pop();
				pilha.push(Library.nt_inicio_const_var_func);
				break;
		
		}
	}
	

}
